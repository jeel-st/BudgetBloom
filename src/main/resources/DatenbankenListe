CREATE TABLE users (
	id SERIAL UNIQUE,
	username VARCHAR(20) UNIQUE NOT NULL,
	pword VARCHAR(30) NOT NULL,
	email VARCHAR(70) NOT NULL,
	rdate DATE DEFAULT CURRENT_DATE,
	ldate DATE DEFAULT CURRENT_DATE
	);

